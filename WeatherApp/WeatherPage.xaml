<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WeatherPage"
             Title="WeatherPage">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto"
          RowSpacing="20">
        <StackLayout Grid.Row="0" Margin="20,20,20,0"
                     Orientation="Horizontal">

            <Button Text="Где Я?" FontSize="Default"
                    FontAttributes="Bold" FontFamily=""
                    TextColor="CornflowerBlue"
                    BackgroundColor="Transparent"
                    HorizontalOptions="StartAndExpand"/>

            <Button Text="Поиск" FontSize="Default"
                    FontAttributes="Bold" FontFamily=""
                    TextColor="CornflowerBlue"
                    BackgroundColor="Transparent"
                    HorizontalOptions="EndAndExpand"/>

        </StackLayout>

        <StackLayout Grid.Row="1" Orientation="Vertical">

            <Label x:Name="cityLabel"
                   FontSize="50" TextColor="Grey"
                   FontFamily=""
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Image x:Name="weatherConditionsImage"
               VerticalOptions="Start"
               HeightRequest="100" WidthRequest="100"/>

        </StackLayout>

        <Label x:Name="weatherConditionsLabel"
               Grid.Row="2"
               FontSize="Default" TextColor="Grey"
               HorizontalOptions="Center"/>       

        <Grid Grid.Row="3"
              RowDefinitions="Auto, Auto"
              ColumnDefinitions="0.33*, 0.33*, 0.33*"
              Margin="20">
            <!--left--> 
            <Image Grid.Row="0" Grid.Column="0"
                   HorizontalOptions="Center"
                   HeightRequest="50"
                   Source="hydrometer.png"/>

            <Label x:Name="hydrometerValueLabel"
                   Grid.Row="1" Grid.Column="0"
                   HorizontalOptions="Center"                   
                   FontAttributes="Bold"
                   TextColor="CornflowerBlue"
                   FontFamily=""/>

            <!--center-->
            <Label x:Name="temperatureValueLabel"
                   Grid.Row="0" Grid.Column="1"
                   Grid.RowSpan="2"
                   HorizontalOptions="Center"
                   FontSize="40"
                   FontAttributes="Bold"
                   FontFamily=""
                   TextColor="Grey"/>

            <!--right-->
            <Image Grid.Row="0" Grid.Column="2"
                   HorizontalOptions="Center"
                   HeightRequest="50"
                   Source="wind.png"/>

            <Label x:Name="windSpeedLabel"
                   Grid.Row="1" Grid.Column="2"
                   HorizontalOptions="Center"                   
                   FontAttributes="Bold"
                   TextColor="CornflowerBlue"
                   FontFamily=""/>

        </Grid>

        <CollectionView x:Name="detailedWeatherDataView"
                        Grid.Row="4" HeightRequest="100">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal"
                                   ItemSpacing="20">
                </LinearItemsLayout>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Grid Grid.Row="4" RowDefinitions="Auto, Auto, Auto">

                        <Image Grid.Row="0"
                               HorizontalOptions="Center"
                               VerticalOptions="Start"
                               HeightRequest="50"
                               WidthRequest="50"/>

                        <Label Grid.Row="1"
                               FontSize="Large"
                               HorizontalOptions="Center"/>

                        <Label Grid.Row="2"
                               FontSize="Small"
                               HorizontalOptions="Center"/>

                    </Grid>

                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>

</ContentPage>
