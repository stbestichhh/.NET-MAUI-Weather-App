<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WeatherPage"
             Title="WeatherPage">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto"
          RowSpacing="20">
        <StackLayout Grid.Row="0" Margin="20,20,20,0"
                     Orientation="Horizontal">

            <Button Text="Где Я?" FontSize="Default"
                    FontAttributes="Bold" FontFamily=""
                    TextColor="CornflowerBlue"
                    BackgroundColor="Transparent"
                    HorizontalOptions="StartAndExpand"/>

            <Button Text="Поиск" FontSize="Default"
                    FontAttributes="Bold" FontFamily=""
                    TextColor="CornflowerBlue"
                    BackgroundColor="Transparent"
                    HorizontalOptions="EndAndExpand"/>

        </StackLayout>

        <StackLayout Grid.Row="1" Orientation="Vertical">

            <Label x:Name="cityLabel" Text="Киев"
                   FontSize="40" TextColor="Grey"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Image x:Name="weatherConditionsImage"
               VerticalOptions="Start"
               HeightRequest="100" WidthRequest="100"
               Source="icon_01d"/>

        </StackLayout>

        <Label x:Name="weatherConditionsLabel" Text="ясно"
               Grid.Row="2"
               FontSize="Default" TextColor="Grey"
               HorizontalOptions="Center"/>       

    </Grid>

</ContentPage>
