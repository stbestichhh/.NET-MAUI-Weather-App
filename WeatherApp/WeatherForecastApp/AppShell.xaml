<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherForecastApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherForecastApp"
    xmlns:views="clr-namespace:WeatherForecastApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Main Weather page -->
    <ShellContent
        Title="Main Weather page"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage"/>

    <!-- Detailed Weather page -->
    <ShellContent
        Title="Detailed Weather page"
        ContentTemplate="{DataTemplate views:SecondaryPage}"
        Route="SecondaryPage"/>

</Shell>

