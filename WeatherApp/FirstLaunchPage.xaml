<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.FirstLaunchPage"
             Title="FirstLaunchPage"
             BackgroundColor="White">

    <StackLayout VerticalOptions="Center" Margin="20" Padding="0">

        <Label Text="Weather" FontSize="50" TextColor="CornflowerBlue"
               FontAttributes="Bold" FontFamily="" HorizontalOptions="EndAndExpand"/>

        <Label Text="by stbestichhh" FontSize="15"
               FontAttributes="Bold" FontFamily="" TextColor="CornflowerBlue"
               HorizontalOptions="EndAndExpand"/>

        <Button x:Name="StartButton" Text="See forecast"
                FontSize="Large" TextColor="CornflowerBlue"
                FontAttributes="Bold" FontFamily=""
                BackgroundColor="GhostWhite"
                CornerRadius="35"
                WidthRequest="180" Margin="0,30,0,0"
                Clicked="StartButton_Clicked"
                HorizontalOptions="EndAndExpand"/>                

    </StackLayout>

</ContentPage>
